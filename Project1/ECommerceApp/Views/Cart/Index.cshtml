@model ECommerceApp.DTOs.CartDto

@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = Model?.TotalAmount ?? 0;
}

<div class="container my-5">
    <h1 class="display-5 fw-bold mb-4">Your Shopping Cart</h1>

    @if (Model != null && Model.Items != null && Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        @foreach (var item in Model.Items)
                        {
                            <div class="row align-items-center mb-3">
                                <div class="col-md-2">
                                    <div class="bg-light rounded p-2 d-flex align-items-center justify-content-center" style="height: 80px; width: 80px;">
                                        @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                        {
                                            <img src="@item.ProductImageUrl" class="img-fluid" style="max-height: 100%;" alt="@item.ProductName">
                                        }
                                        else
                                        {
                                            <i class="fas fa-box text-secondary fa-2x"></i>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <h5 class="mb-1"><a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">@item.ProductName</a></h5>
                                </div>
                                <div class="col-md-3">
                                    <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="@item.AvailableStock" class="form-control form-control-sm text-center me-2" style="width: 60px;">
                                        <button type="submit" class="btn btn-link text-primary p-0" title="Update"><i class="fas fa-sync-alt"></i></button>
                                    </form>
                                </div>
                                <div class="col-md-2 text-end">
                                    <span class="fw-bold">Rp @item.Subtotal.ToString("N0")</span>
                                </div>
                                <div class="col-md-1 text-end">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-link text-danger p-0"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </div>
                            @if (item != Model.Items.Last())
                            {
                                <hr class="my-3">
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Order Summary</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span class="fw-bold">Rp @total.ToString("N0")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span>Shipping</span>
                            <span class="text-success fw-bold">Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">Total</span>
                            <span class="fs-5 fw-bold text-primary">Rp @total.ToString("N0")</span>
                        </div>
                        <div class="d-grid">
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-lg shadow-md">Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-4 opacity-50"></i>
            <h3 class="text-muted">Your cart is empty</h3>
            <p class="mb-4">Looks like you haven't added any products yet.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary px-5">Start Shopping</a>
        </div>
    }
</div>
