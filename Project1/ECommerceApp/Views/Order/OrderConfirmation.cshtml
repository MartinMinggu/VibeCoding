@model ECommerceApp.Models.Order

@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container my-5 text-center">
    <div class="card shadow-lg border-0 d-inline-block p-5" style="max-width: 600px;">
        <div class="mb-4 text-success">
            <i class="fas fa-check-circle fa-5x"></i>
        </div>
        <h1 class="display-5 fw-bold mb-3">Order Placed!</h1>
        <p class="lead text-muted mb-4">Thank you for your purchase. Your order has been successfully placed.</p>
        
        <div class="bg-light rounded p-4 mb-4 text-start">
            <div class="row mb-2">
                <div class="col-6 text-muted">Order ID:</div>
                <div class="col-6 fw-bold">#@Model.Id</div>
            </div>
             <div class="row mb-2">
                <div class="col-6 text-muted">Date:</div>
                <div class="col-6 fw-bold">@Model.OrderDate.ToString("g")</div>
            </div>
             <div class="row mb-2">
                <div class="col-6 text-muted">Total Amount:</div>
                <div class="col-6 fw-bold text-primary">Rp @Model.TotalAmount.ToString("N0")</div>
            </div>
             <div class="row">
                <div class="col-6 text-muted">Payment Method:</div>
                <div class="col-6 fw-bold">@Model.PaymentMethod</div>
            </div>
        </div>
        
        <div class="d-flex gap-2 justify-content-center">
            <a asp-action="MyOrders" class="btn btn-outline-primary">View My Orders</a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary px-4">Continue Shopping</a>
        </div>
    </div>
</div>
