@model IEnumerable<ECommerceApp.Application.DTOs.AnnouncementDto>
@{
    ViewData["Title"] = "All Announcements";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">
                <i class="fas fa-bullhorn me-2 text-primary"></i>All Announcements
            </h1>
            <p class="text-muted mb-0">Latest news, promos, and events</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var announcement in Model)
            {
                var cardStyle = announcement.Type switch
                {
                    ECommerceApp.Domain.Entities.AnnouncementType.Promo => "border-success bg-success bg-opacity-10",
                    ECommerceApp.Domain.Entities.AnnouncementType.Event => "border-warning bg-warning bg-opacity-10",
                    _ => "border-info bg-info bg-opacity-10"
                };
                var iconClass = announcement.Type switch
                {
                    ECommerceApp.Domain.Entities.AnnouncementType.Promo => "fa-tags text-success",
                    ECommerceApp.Domain.Entities.AnnouncementType.Event => "fa-calendar-star text-warning",
                    _ => "fa-newspaper text-info"
                };
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-2 @cardStyle announcement-card">
                        @if (!string.IsNullOrEmpty(announcement.ImageUrl))
                        {
                            <img src="@announcement.ImageUrl" class="card-img-top" alt="@announcement.Title" style="height: 180px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas @iconClass me-2"></i>
                                <span class="badge bg-dark bg-opacity-75 rounded-pill small">@announcement.TypeName</span>
                            </div>
                            <h5 class="card-title fw-bold">@announcement.Title</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(announcement.Content.Length > 150 ? announcement.Content.Substring(0, 147) + "..." : announcement.Content)
                            </p>
                            <div class="mt-auto">
                                @if (announcement.EndDate.HasValue)
                                {
                                    <small class="text-muted d-block mb-2">
                                        <i class="fas fa-clock me-1"></i>Until @announcement.EndDate.Value.ToString("MMM dd, yyyy")
                                    </small>
                                }
                                <a asp-action="AnnouncementDetail" asp-route-id="@announcement.Id" class="btn btn-sm btn-outline-dark rounded-pill">
                                    Read More <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-bullhorn fa-4x text-muted opacity-50"></i>
            </div>
            <h4 class="text-muted">No announcements at the moment</h4>
            <p class="text-muted">Check back later for news and promos!</p>
        </div>
    }
</div>

<style>
    .announcement-card {
        transition: all 0.3s ease;
        border-radius: 1rem;
    }
    .announcement-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.1);
    }
</style>
