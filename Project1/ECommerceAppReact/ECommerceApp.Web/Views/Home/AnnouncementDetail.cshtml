@model ECommerceApp.Application.DTOs.AnnouncementDto
@{
    ViewData["Title"] = Model.Title;
    
    var badgeClass = Model.Type switch
    {
        ECommerceApp.Domain.Entities.AnnouncementType.Promo => "bg-success",
        ECommerceApp.Domain.Entities.AnnouncementType.Event => "bg-warning text-dark",
        _ => "bg-info"
    };
    var cardClass = Model.Type switch
    {
        ECommerceApp.Domain.Entities.AnnouncementType.Promo => "border-success",
        ECommerceApp.Domain.Entities.AnnouncementType.Event => "border-warning",
        _ => "border-info"
    };
}

<div class="container py-5" style="max-width: 800px;">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">@Model.TypeName</li>
        </ol>
    </nav>

    <div class="card border-2 @cardClass shadow-sm">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="max-height: 400px; object-fit: cover;">
        }
        <div class="card-body p-4">
            <div class="d-flex align-items-center gap-2 mb-3">
                <span class="badge @badgeClass rounded-pill px-3">@Model.TypeName</span>
                @if (Model.StartDate.HasValue || Model.EndDate.HasValue)
                {
                    <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        @if (Model.StartDate.HasValue && Model.EndDate.HasValue)
                        {
                            @Model.StartDate.Value.ToString("MMM dd") <text> - </text> @Model.EndDate.Value.ToString("MMM dd, yyyy")
                        }
                        else if (Model.EndDate.HasValue)
                        {
                            <text>Until </text>@Model.EndDate.Value.ToString("MMM dd, yyyy")
                        }
                        else if (Model.StartDate.HasValue)
                        {
                            <text>From </text>@Model.StartDate.Value.ToString("MMM dd, yyyy")
                        }
                    </small>
                }
            </div>

            <h1 class="card-title fw-bold mb-4">@Model.Title</h1>
            
            <div class="card-text fs-5 lh-lg">
                @Html.Raw(Model.Content.Replace("\n", "<br/>"))
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-between align-items-center text-muted small">
                <span>
                    <i class="fas fa-clock me-1"></i>Published @Model.CreatedAt.ToString("MMMM dd, yyyy")
                </span>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
        </a>
    </div>
</div>
