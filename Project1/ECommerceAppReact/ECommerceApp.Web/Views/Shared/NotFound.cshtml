@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container my-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
            <h1 class="display-4 fw-bold mb-3">404</h1>
            <h2 class="mb-4">Oops! Page Not Found</h2>
            <p class="text-muted mb-4">
                The page you are looking for doesn't exist or has been moved.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-shopping-bag me-2"></i>Browse Products
                </a>
            </div>
        </div>
    </div>
</div>
