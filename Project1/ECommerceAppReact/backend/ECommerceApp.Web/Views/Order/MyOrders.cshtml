@model IEnumerable<ECommerceApp.Application.DTOs.OrderDto>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-5">
    <h1 class="display-5 fw-bold mb-4">My Orders</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold me-2">Order #@order.Id</span>
                                <span class="text-muted small">@order.OrderDate.ToString("g")</span>
                            </div>
                            <div>
                                <span class="badge bg-@GetStatusColor(order.Status)">@order.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h6 class="mb-3">Items:</h6>
                                    @foreach (var item in order.Items)
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                            {
                                                <img src="@item.ProductImageUrl" class="rounded me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-box text-secondary"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@item.ProductName</div>
                                                <div class="text-muted small">@item.Quantity x Rp @item.UnitPrice.ToString("N0")</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                    <div class="small text-muted mb-1">Total Amount</div>
                                    <div class="fs-4 fw-bold text-primary">Rp @order.TotalAmount.ToString("N0")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
         <div class="text-center py-5">
            <i class="fas fa-clipboard-list fa-5x text-muted mb-4 opacity-50"></i>
            <h3 class="text-muted">No orders found</h3>
            <p class="mb-4">You haven't placed any orders yet.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary px-5">Start Shopping</a>
        </div>
    }
</div>

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}
