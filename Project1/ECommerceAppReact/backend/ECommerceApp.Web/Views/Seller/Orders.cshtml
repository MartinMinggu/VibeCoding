@model IEnumerable<ECommerceApp.Application.DTOs.SellerOrderItemDto>

@{
    ViewData["Title"] = "Orders";
}

<div class="container my-5">
    <h1 class="display-6 fw-bold mb-4">Orders</h1>

    @if (Model != null && Model.Any())
    {
        var groupedOrders = Model.GroupBy(oi => oi.OrderId).OrderByDescending(g => g.First().OrderDate);
        
        @foreach (var orderGroup in groupedOrders)
        {
            var orderDetails = orderGroup.First();
            
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Order #@orderDetails.OrderId</h5>
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i> @orderDetails.OrderDate.ToString("g") | 
                            <i class="fas fa-user me-1"></i> @orderDetails.CustomerName
                        </small>
                    </div>
                    <div>
                        <form asp-action="UpdateOrderStatus" method="post" class="d-inline-flex align-items-center gap-2">
                            <input type="hidden" name="orderId" value="@orderDetails.OrderId" />
                            <select name="status" class="form-select form-select-sm" style="width: auto;">
                                <option value="Pending" selected="@(orderDetails.Status == "Pending")">Pending</option>
                                <option value="Processing" selected="@(orderDetails.Status == "Processing")">Processing</option>
                                <option value="Shipped" selected="@(orderDetails.Status == "Shipped")">Shipped</option>
                                <option value="Delivered" selected="@(orderDetails.Status == "Delivered")">Delivered</option>
                                <option value="Cancelled" selected="@(orderDetails.Status == "Cancelled")">Cancelled</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in orderGroup)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span>@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>Rp @item.UnitPrice.ToString("N0")</td>
                                        <td>Rp @item.Subtotal.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3 p-3 bg-light rounded">
                         <div class="row">
                            <div class="col-md-6">
                                <strong>Shipping Address:</strong><br/>
                                @orderDetails.ShippingAddress
                            </div>
                            <div class="col-md-6">
                                <strong>Payment Method:</strong><br/>
                                @orderDetails.PaymentMethod
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-bag fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">No orders yet</h4>
            <p class="text-muted">Orders for your products will appear here</p>
        </div>
    }
</div>
