@model ECommerceApp.Application.DTOs.ProductDetailsDto

@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewBag.Categories as IEnumerable<ECommerceApp.Domain.Entities.Category>;
}

<div class="container my-5">
    <h1 class="display-6 fw-bold mb-4">Edit Product</h1>

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h5 class="mb-3">Product Details</h5>
                        <div class="mb-3">
                            <label for="Name" class="form-label">Product Name</label>
                            <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" required />
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea name="Description" id="Description" class="form-control" rows="4" required>@Model.Description</textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Price" class="form-label">Price (Rp)</label>
                                <input asp-for="Price" class="form-control" min="0" step="0.01" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Stock" class="form-label">Stock</label>
                                <input type="number" name="Stock" id="Stock" class="form-control" value="@Model.Stock" min="0" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="CategoryId" class="form-label">Category</label>
                            <select name="CategoryId" id="CategoryId" class="form-select" required>
                                @if (categories != null)
                                {
                                    foreach (var category in categories)
                                    {
                                        <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="ImageUrl" class="form-label">Main Image URL</label>
                            <input type="text" name="ImageUrl" id="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gallery Images Section -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h5 class="mb-3">Product Gallery</h5>
                        
                        <!-- Existing Images -->
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Images</label>
                                <div class="row g-2">
                                    @foreach (var image in Model.Images)
                                    {
                                        <div class="col-md-3">
                                            <div class="position-relative border rounded p-2">
                                                <img src="@image.ImageUrl" class="img-fluid rounded" alt="Product Image" style="width: 100%; height: 120px; object-fit: cover;" />
                                                <form asp-action="DeleteGalleryImage" method="post" class="d-inline" onsubmit="return confirm('Delete this image?');">
                                                    <input type="hidden" name="imageId" value="@image.Id" />
                                                    <input type="hidden" name="productId" value="@Model.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" style="opacity: 0.9;">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        <!-- Upload New Images -->
                        <div class="mb-3">
                            <label for="galleryImages" class="form-label">Add New Images</label>
                            <input type="file" name="galleryImages" id="galleryImages" class="form-control" accept="image/*" multiple />
                            <small class="form-text text-muted">You can select multiple images at once</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Update Product</button>
                    <a asp-action="Products" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
