@model IEnumerable<ECommerceApp.Application.DTOs.AnnouncementDto>
@{
    ViewData["Title"] = "Manage Announcements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">
                <i class="fas fa-bullhorn me-2 text-primary"></i>Announcements
            </h1>
            <p class="text-muted mb-0">Manage news, promos, and events displayed to users</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-2"></i>New Announcement
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">Title</th>
                                <th class="py-3">Type</th>
                                <th class="py-3">Status</th>
                                <th class="py-3">Schedule</th>
                                <th class="py-3">Created</th>
                                <th class="py-3 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 fw-medium">@item.Title</td>
                                    <td class="py-3">
                                        @{
                                            var typeClass = item.Type switch
                                            {
                                                ECommerceApp.Domain.Entities.AnnouncementType.News => "bg-info",
                                                ECommerceApp.Domain.Entities.AnnouncementType.Promo => "bg-success",
                                                ECommerceApp.Domain.Entities.AnnouncementType.Event => "bg-warning text-dark",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @typeClass rounded-pill">@item.TypeName</span>
                                    </td>
                                    <td class="py-3">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success rounded-pill">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill">Inactive</span>
                                        }
                                    </td>
                                    <td class="py-3 text-muted small">
                                        @if (item.StartDate.HasValue || item.EndDate.HasValue)
                                        {
                                            <span>@item.StartDate?.ToString("MMM dd") - @item.EndDate?.ToString("MMM dd, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span>Always</span>
                                        }
                                    </td>
                                    <td class="py-3 text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="py-3 text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-bullhorn fa-4x text-muted opacity-50"></i>
            </div>
            <h4 class="text-muted">No announcements yet</h4>
            <p class="text-muted">Create your first announcement to get started.</p>
            <a asp-action="Create" class="btn btn-primary rounded-pill px-4 mt-2">
                <i class="fas fa-plus me-2"></i>Create First Announcement
            </a>
        </div>
    }
</div>
