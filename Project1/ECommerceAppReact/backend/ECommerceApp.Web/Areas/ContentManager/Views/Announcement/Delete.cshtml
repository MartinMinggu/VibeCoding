@model ECommerceApp.Application.DTOs.AnnouncementDto
@{
    ViewData["Title"] = "Delete Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4" style="max-width: 600px;">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Announcements</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0"><i class="fas fa-trash me-2"></i>Delete Announcement</h4>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this announcement? This action cannot be undone.
            </div>

            <div class="border rounded p-3 bg-light mb-4">
                <h5 class="fw-bold mb-2">@Model.Title</h5>
                <p class="text-muted mb-2">@Model.Content</p>
                <div class="d-flex gap-2">
                    <span class="badge bg-info">@Model.TypeName</span>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
            </div>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash me-2"></i>Yes, Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
